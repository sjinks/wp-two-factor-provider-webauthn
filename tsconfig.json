{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["assets/*.ts", "tests/e2e/*.ts", "playwright.config.ts"],
  "compileOnSave": true
}
